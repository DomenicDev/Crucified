<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>

    <!-- this style is used for elements (panels) in the settings screen -->

    <style id="setting#panel">
        <attributes
                    childLayout="horizontal"
                    visibleToMouse="true"
                    width="90%"
                    height="*"
                    paddingLeft="10px"
                    paddingRight="10px"
                    valign="center"
                    align="center" />
    </style>

    <style id="setting#text">
        <attributes font="Interface/Fonts/Button.fnt"
                    align="center"
                    valign="center"
        />
    </style>


</nifty-styles>