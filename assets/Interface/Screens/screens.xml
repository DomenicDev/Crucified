<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">

    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>


    <resourceBundle id="dialog" filename="Interface/settings/lang/dialog" />

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- empty screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="emptyScreen" />


    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- main menu screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="mainMenu" controller="de.gamedevbaden.crucified.appstates.gui.MainMenuScreenController">
        <layer id="mainLayer" width="100%" height="100%" childLayout="center" align="center" valign="center">
            <panel id="mainPanel" width="100%" height="100%" align="center" valign="center" childLayout="vertical">
                <panel id="titlePanel" valign="center" align="center" childLayout="center" width="100%" height="25%">
                    <control id="title" name="label" text="Crucified" width="100%" height="100%" valign="center" align="center" />
                </panel>
                <panel id="emptyPanel" childLayout="center" width="100%" height="*" />
                <panel id="buttonPanel" childLayout="vertical" align="center" valign="center" width="30%" height="40%">
                    <panel id="startGamePanel" childLayout="center" align="center" valign="center" width="90%" height="*">
                        <control id="startGameButton" name="button" label="${dialog.startSingleplayerGame}" width="100%" height="90%">
                            <interact onClick="startSingleplayerGame()" />
                        </control>
                    </panel>
                    <panel id="hostGamePanel" childLayout="center" align="center" valign="center" width="90%" height="*">
                        <control id="hostGameButton" name="button" label="${dialog.hostCoopGame}" width="100%" height="90%">
                            <interact onClick="createCoopGame()" />
                        </control>
                    </panel>
                    <panel id="connectToGamePanel" childLayout="center" align="center" valign="center" width="90%" height="*">
                        <control id="connectToGameButton" name="button" label="${dialog.connectToCoopGame}" width="100%" height="90%">
                            <interact onClick="connectToGame()" /> <!-- opens new screen -->
                        </control>
                    </panel>
                    <panel id="quitGamePanel" childLayout="center" align="center" valign="center" width="90%" height="*">
                        <control id="quitGameButton" name="button" label="${dialog.quitGame}" width="100%" height="90%">
                            <interact onClick="quitGame()" />
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>


</nifty>
